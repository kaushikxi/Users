<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class ="w-full h-full bg-zinc-900 p-10 text-white">
       <div class="text-blue-500 mb-10 text-2xl">
        <a href="/">Go Back To Home</a>
       </div>
       <h1 class="text-white mb-2 text-3xl tracking-tighter">All Users</h1> 
       <div class="users flex gap-3 flex-wrap">
        <%  if(users.length<1){ %>
             <h3 class="text-zinc-500 mt-5 text-2xl ">No Users</h3>
        <% } else { %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg ">
                    <div class="image w-full h-72 rounded-lg overflow-hidden ">
                        <img class="w-full h-full object-cover object-top" src="<%= user.imageurl %>" alt="">
                    </div>
                    <h3 class="text-2xl mt-3"><%= user.name %></h1>
                    <h2 class="text-xl mb"><%= user.email %></h2>
                    <div class="flex gap-3 flex-wrap mt-10">
                        <a class="text-zinc-500" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-600" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                  </div> 
            <% }) %>
        <% } %> 
       </div>
    </div>
</body>
</html>